
@require 'normalize.styl';
@require 'fonts.styl';

/*
------------------
--- VARIABLES ----
$off-black = #333;
------------------
*/

body {
  font-family: code;
  font-size: 18px;
}

div#container {
  width: 960px;
  margin: 0 auto;
  padding: 20px 0 20px;
}

section#content {
  padding: 0 5px;
}

header#main-header {
  h1 {
    font-family: familiar-pro-bold;
    text-transform:uppercase;
    font-size: 92px;//112px
    color: $off-black;
    margin: 5px 0;
  }
}

section#audio-items {
  ul {
    list-style-type: none;
    padding:0;
    margin: 30px 0;

    li {
      margin:20px 0;
    }
  }
}

article.audio-track {
  h4.title {
    /* font-family: familiar_probold; */
    font-weight: bold;
    margin: 10px 0;
    color: $off-black;
    font-size:24px; //22px
    text-transform: uppercase;
  }
  p.download {
    font-size:17px;
    margin: 2px 0 5px;

    a.download-link {
      text-transform: uppercase;
    }
  }
}

.hidden {
  display: none;
}

p {
  margin: 18px 0;
}
